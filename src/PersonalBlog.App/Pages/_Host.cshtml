@page "/"
@namespace PersonalBlog.App.Pages
@using PersonalBlog.App.Settings
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@inject ISettingManager _settingManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@_settingManager.GetSystemSetting().Title</title>
    <meta name="description" content="@_settingManager.GetSystemSetting().Description" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server))
    </app>

    <script src="_framework/blazor.server.js"></script>
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/app.js"></script>
</body>
</html>
